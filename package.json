{
  "name": "q-portal",
  "version": "0.1.0",
  "type": "module",
  "description": "Central hub for Q-Summit's internal tools and automation, optimizing workflows and enhancing operational efficiency across teams.",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun run lint",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:setup": "bun run scripts/setup-db.ts",
    "docs:check": "bash scripts/check-docs.sh",
    "review:task": "bash scripts/review-run.sh",
    "review:pr": "bash scripts/review-run.sh pr",
    "review:read": "bash scripts/review-read.sh",
    "review:cleanup": "bash scripts/review-cleanup.sh",
    "pr:comments": "bash scripts/pr-comments-get.sh",
    "pr:comments:detect": "bash scripts/pr-comments-detect.sh",
    "pr:comments:get": "bash scripts/pr-comments-get.sh",
    "pr:comments:resolve": "bash scripts/pr-comments-resolve.sh",
    "pr:comments:resolve:interactive": "bash scripts/pr-comments-resolve.sh --interactive",
    "pr:comments:dismiss": "bash scripts/pr-comments-dismiss.sh",
    "pr:comments:cleanup": "bash scripts/pr-comments-cleanup.sh",
    "pr:list": "bash scripts/pr-comments-fetch.sh",
    "agent:finalize": "bash scripts/finalize.sh",
    "test": "bun test",
    "test:unit": "bun test **/*.unit.test.ts",
    "test:integration": "bun test **/*.integration.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:install": "bunx playwright install",
    "test:stories": "vitest run",
    "test:watch": "bun test --watch",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@slack/web-api": "^7.13.0",
    "@t3-oss/env-nextjs": "^0.9.2",
    "@tanstack/react-query": "^5.56.2",
    "@trpc/client": "^11.7.1",
    "@trpc/react-query": "^11.7.1",
    "@trpc/server": "^11.7.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "next": "^16.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@happy-dom/global-registrator": "^20.0.10",
    "@inquirer/prompts": "^5.0.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@playwright/test": "^1.48.0",
    "@storybook/addon-a11y": "^10.2.1",
    "@storybook/addon-docs": "^10.2.1",
    "@storybook/addon-vitest": "^10.2.1",
    "@storybook/nextjs-vite": "^10.2.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/bun": "^1.3.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-istanbul": "^4.0.18",
    "autoprefixer": "^10.4.20",
    "chromatic": "^13.3.5",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.12.0",
    "happy-dom": "^20.0.10",
    "msw": "^2.12.7",
    "msw-storybook-addon": "^2.0.6",
    "msw-trpc": "2.0.0-beta.0",
    "playwright": "^1.58.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "storybook": "^10.2.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
